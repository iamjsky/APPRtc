<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/background_piano3">

    <View
        android:background="#99000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/view_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/img_soundleader"
        android:layout_width="400dp"
        android:layout_height="wrap_content"></ImageView>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:elevation="10dp"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/radius_white_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/colorOther2"
            android:text="ID"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edit_id"
            android:backgroundTint="@color/colorOther"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/colorOther2"
            android:layout_marginTop="10dp"
            android:text="PASSWORD"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_pass"
            android:backgroundTint="@color/colorOther"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        <Button
            android:onClick="onLogin"
            android:layout_marginTop="10dp"
            android:textColor="@color/primary2"
            android:background="@color/primary"
            android:text="Login"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:textColor="@color/primary2"
            android:onClick="onRegist"
            android:layout_gravity="right"
            android:text="회원가입"
            android:layout_marginTop="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>